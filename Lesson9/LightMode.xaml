<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
                    >
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="LightSteelBlue"/>
        <Setter Property="Button.Margin" Value="5"/>
        <Setter Property="Button.Padding" Value="5"/>
    </Style>
    <Style x:Key="TextBoxStyle" BasedOn="{StaticResource WindowStyle}" TargetType="TextBox">
        <Setter Property="Foreground" Value="Black"/>
    </Style>
    <Style x:Key="ButtonStyle" BasedOn="{StaticResource WindowStyle}" TargetType="Button">
        <Setter Property="Button.Background" Value="GhostWhite"/>        
    </Style>
</ResourceDictionary>