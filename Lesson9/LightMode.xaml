<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
                    x:Name="LightModeRes">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="LightSteelBlue"/>
        <Setter Property="Control.Margin" Value="5"/>
        <Setter Property="Control.Padding" Value="5"/>
    </Style>
    <Style x:Key="TextBoxStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="TextBox.Foreground" Value="Black"/>
        <Setter Property="TextBox.Background" Value="White"/>
    </Style>
    <Style x:Key="ButtonStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Control.Foreground" Value="Black"/>        
    </Style>
    <Style x:Key="RadioButtonStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Control.Foreground" Value="Black"/>
    </Style>
    <Style x:Key="StackPanelStyle" BasedOn="{StaticResource WindowStyle}" TargetType="StackPanel">
        <Setter Property="StackPanel.Background" Value="Snow"/>
    </Style>
</ResourceDictionary>